             xmlns:vm="clr-namespace:Desive2.ViewModels"
              NavigationPage.HasNavigationBar="True"
             Title="{Binding Title}"   >
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
