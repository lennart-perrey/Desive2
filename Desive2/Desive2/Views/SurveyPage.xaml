                        <RadioButton Content="zwischen 20 und 29 Jahre" />
                        <RadioButton Content="zwischen 30 und 39 Jahre" />
                        <RadioButton Content="zwischen 40 und 49 Jahre" />
                        <RadioButton Content="zwischen 50 und 59 Jahre" />
                        <RadioButton Content="zwischen 60 und 69 Jahre" />
                        <RadioButton Content="70+ Jahre" />
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Wie alt sind Sie?" />
                        <RadioButton Content="19 und jünger" />
                        <RadioButton Content="zwischen 20 und 29 Jahre" />
                        <RadioButton Content="zwischen 30 und 39 Jahre" />
                        <RadioButton Content="zwischen 40 und 49 Jahre" />
                        <RadioButton Content="zwischen 50 und 59 Jahre" />
                        <RadioButton Content="zwischen 60 und 69 Jahre" />
                        <RadioButton Content="70+ Jahre" />
                    </StackLayout>
            </StackLayout>


   


             
            </ScrollView>
            <Grid Grid.Row="1">
                <Button Text="Absenden" Margin="20,20,20,20"/>
            </Grid>
                
        </Grid>
    </ContentPage.Content>
</ContentPage>